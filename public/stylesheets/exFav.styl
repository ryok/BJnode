#main
  .row
    .item
      position relative
      width 160px
      height 190px
      margin 5px 0px

      .thumbnail
        position relative
        width 100%
        height 100%
        padding 0px
        margin 0px
        overflow hidden

        .img
          position relative
          width 129px
          height 129px
          overflow hidden
          float left
            
        .name
          position relative
          width 100%
          height 25px
          border-top solid 1px #ddd
          border-bottom solid 1px #ddd
          box-sizing border-box
          text-align center
          line-height 23px
          float left
          font-size 10px

        .fav
          position relative
          width 100%
          height 35px
          float left
          overflow hidden
          
          button
            position relative
            width 60px
            height 25px
            margin 0px
            padding 0px
            left 50%
            margin-left -30px
            margin-top 5px